{
  "compilerOptions": {
    // Versão do JavaScript gerado
    "target": "ES2020",
    
    // Sistema de módulos
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    // Pastas
    "rootDir": "./src",
    "outDir": "./dist",
    
    // Configurações de qualidade
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Extras úteis
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
